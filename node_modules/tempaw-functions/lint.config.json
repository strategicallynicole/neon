{
	"pug": {
		"extends": "clock",
		"validateIndentation": "\t",
		"validateExtensions": null,
		"validateLineBreaks": "CRLF",
		"disallowSpacesInsideAttributeBrackets": null,
		"requireSpacesInsideAttributeBrackets": true,
		"disallowTrailingSpaces": true,
		"disallowClassLiteralsBeforeIdLiterals": true,
		"disallowIdLiterals": null,
		"disallowIdAttributeWithStaticValue": true,
		"disallowIdLiteralsBeforeAttributes": null,
		"disallowLegacyMixinCall": true,
		"validateTemplateString": true,
		"requireLowerCaseAttributes": null,
		"requireSpecificAttributes": [
			{ "img": "alt" },
			{ "input": "type" }
		]
	},
	"scss": {
		"plugins": [
			"stylelint-scss"
		],
		"extends": [
			"stylelint-config-recommended-scss"
		],
		"rules" : {
			"no-descending-specificity": false,
			"font-family-no-missing-generic-family-keyword": false,
			"string-no-newline" : true,
			"unit-no-unknown": true,
			"property-no-unknown": true,
			"block-no-empty": true,
			"selector-type-no-unknown": true,
			"selector-pseudo-element-no-unknown": true,
			"selector-pseudo-class-no-unknown": true,
			"declaration-block-no-duplicate-properties": [ true, {
				"ignoreProperties" : [
					[
						"background-image",
						"cursor"
					]
				]
			}],
			"comment-no-empty": true,
			"at-rule-no-unknown": [ true, {
				"ignoreAtRules": [
					"extend",
					"mixin",
					"function",
					"return",
					"include",
					"each",
					"for",
					"if",
					"else",
					"at-root"
				]
			}],
			"declaration-block-single-line-max-declarations": 1,
			"indentation": "tab",
			"no-empty-source": true,
			"no-extra-semicolons": true,
			"no-invalid-double-slash-comments": true,
			"number-max-precision": 5,
			"shorthand-property-no-redundant-values": true,
			"declaration-block-no-redundant-longhand-properties": true,
			"max-nesting-depth": 5,
			"no-empty-first-line": true,
			"no-eol-whitespace": true,
			"comment-whitespace-inside": "always",
			"at-rule-semicolon-space-before": "never",
			"at-rule-semicolon-newline-after": "always",
			"media-feature-name-case": "lower",
			"declaration-block-trailing-semicolon": "always",
			"declaration-block-semicolon-newline-after": "always",
			"block-closing-brace-empty-line-before": "never",
			"property-case": "lower"
		}
	},
	"js": {
		"baseConfig": {
			"extends": "eslint:recommended",
			"env": {
				"browser": true,
				"jquery": true
			}
		},
		"rules": {
			"indent": [
				"error",
				"tab"
			],
			"camelcase": 2,
			"no-console": 1
		}
	}
}
